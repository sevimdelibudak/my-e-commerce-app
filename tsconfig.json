// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // BU SATIR ÇOK ÖNEMLİ! Proje kökünü baseUrl olarak ayarlar.
    "paths": {
      "@/*": ["./*"], // Tüm proje kökünü temsil eder
      "@/components/*": ["components/*"], // '@components' takma adını ayarlar
      "@/lib/*": ["lib/*"]              // '@lib' takma adını ayarlar
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.js"],
  "exclude": ["node_modules"]
}